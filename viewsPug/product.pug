extends ./header
block content
 .container
  .h1.mt-5 Products
  .row
   each item in product
    .col-md-3
     .card(style='width: 16rem;').mr-2.mt-5
      img.card-img-top(src=item.image, alt='Card image cap')
      .card-body
        h5.card-title #{item.name}
        p.card-text
          | Some quick example text to build on the card title and make up the bulk of the card&apos;s content.
        a.btn.btn-primary(href='/cart/add/'+item.id) Add Cart

  .nav(aria-label='Page navigation example').mt-5.justify-content-center
   ul.pagination
    li.page-item
     a.page-link(href='#') Previous
    li.page-item
     a.page-link(href='#') 1
    li.page-item
     a.page-link(href='#') 2
    li.page-item
     a.page-link(href='#') 3
    li.page-item
     a.page-link(href='#') Next